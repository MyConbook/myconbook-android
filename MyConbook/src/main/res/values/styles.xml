<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavDrawer">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <string name="font_fontFamily_medium">sans-serif</string>

    <style name="NavDrawer.Item" parent="NavDrawer">
        <item name="android:drawablePadding">24dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minHeight">@dimen/navdrawer_item_height</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textcolor_white</item>

        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="ListHeader" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/primary_dark_material_dark</item>
        <item name="android:background">@color/material_blue_grey_200</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>